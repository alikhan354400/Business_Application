<script>

    $(document).ready(function () {

        //------------------------ Search Invoice on enter key press ----------------------------------------
        $(document).on('keypress', function (e) {
            if (e.which == 13) {
                SearchSO();
            }
        });

        //------------------------ Search Invoice ----------------------------------------
        $('body').on('click', '#lnkInvoiceSearch', function () {
            SearchSO();
        });


        function SearchSO() {
             var invNo = $('#txtInvoiceNo').val();

            if (invNo == null || invNo == '0' || invNo == '') {
                AlertMsg('<strong>Error! </strong>', "Please fill valid invoice #", 'info');
                return;
            }

            var model = {
                SONo: invNo
            };

              //Show loader here
            $('.page-loader-wrapper').show();
            $.ajax({
                contentType: 'application/json; charset=utf-8',
                dataType: 'json',
                type: 'POST',
                url: "@Url.Action("IsValidSONo")",
                data: JSON.stringify(model),
                success: function (res) {
                    if (res.Result == "OK") {
                        window.location.href = (getWebsiteUrl + "/Sale/SaleOrder/" + res.SOID);
                    }
                    else {
                        $('.page-loader-wrapper').hide();
                        AlertMsg('<strong>Error! </strong>', "Error...! Invalid Invoice #", 'info');
                    }
                },
                failure: function (response) {
                    $('#result').html(response);
                },
                complete: function () {
                    $('.page-loader-wrapper').hide();
                }
            });
        }

    });
</script>