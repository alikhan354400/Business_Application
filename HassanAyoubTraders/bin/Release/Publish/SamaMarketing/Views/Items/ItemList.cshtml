@model SamaaMarketing.Models.ViewModels.ItemAddEditListViewModel

@{
    ViewBag.Title = "Item List";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Item List
                </h2>
                <div class="header-dropdown m-r--5">
                    <a href="~/Items/ItemAddEdit" class="btn btn-danger waves-effect pull-right">
                        <i class="material-icons">add</i>
                        <span>ADD</span>
                    </a>
                </div>
            </div>
            <div class="body">
                <div class="row clearfix">
                    <div class="col-md-12">
                        <table class="table table-striped table-bordered datatable" id="tblList">
                            <thead>
                                <tr>
                                    <th style="">Vendor</th>
                                    <th style="">Product Name</th>
                                    <th style="">Description</th>
                                    <th style="width: 10%;">Unit Type</th>
                                    <th style="width: 10%;">Action</th>

                                </tr>
                            </thead>
                            <tbody>
                                @{ foreach (var item in Model.ItemsList)
                                    {
                                        <tr>
                                            <td>@item.VendorName</td>
                                            <td>@item.ProductName</td>
                                            <td>@item.Description</td>
                                            <td>@item.UnitType</td>
                                            <td>
                                                <div class="dt-buttons">
                                                    <a href="#" data-id="@item.ItemID" class="btn btn-xs edit" title="Edit"><i class="fa fa-pencil-square-o"></i></a>
                                                    |
                                                    <a href="#" data-id="@item.ItemID" class="btn btn-xs delete" title="Remove"><i class="fa fa-trash"></i></a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    $('.datatable').on('click', '.delete', function () {
        if (confirm('Are you sure to want to delete?')) {
            var id = $(this).attr("data-id");
            $('.page-loader-wrapper').show();
            var url = getWebsiteUrl + "/Items/ItemDelete/" + id;
            window.location.href = url;
        }
    });

    $('.datatable').on('click', '.edit', function () {
        var id = $(this).attr("data-id");
        $('.page-loader-wrapper').show();
        var url = getWebsiteUrl + "/Items/ItemAddEdit/" + id;
        window.location.href = url;
    });



</script>


