@model HassanAyoubTraders.Models.ViewModels.AccountViewModel

@{
    ViewBag.Title = "Employee List";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link href="https://fonts.googleapis.com/css?family=Libre+Barcode+128&display=swap" rel="stylesheet">

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Employee List
                </h2>
                <div class="header-dropdown m-r--5">
                    <a href="~/Employee/AddEditEmployee" class="btn btn-danger waves-effect pull-right">
                        <i class="material-icons">add</i>
                        <span>ADD</span>
                    </a>
                </div>
            </div>
            <div class="body">
                <div class="row clearfix">
                    <div class="col-md-12">
                        <table class="table table-striped table-bordered datatablethis grid" id="tblList">
                            <thead>
                                <tr>
                                    <th>Company</th>
                                    <th>Name</th>
                                    <th>Mobile</th>
                                    <th>CNIC</th>
                                    <th>Salary</th>
                                    <th>City</th>
                                    <th>City Area</th>
                                    <th>Designation</th>
                                    <th style="width: 20%;">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ foreach (var item in Model.AccountList)
                                    {
                                        <tr>
                                            <td>@item.CompanyName</td>
                                            <td>@item.Name</td>
                                            <td>@item.MobileNo</td>
                                            <td>@item.CNIC</td>
                                            <td>@item.Salary</td>
                                            <td>@item.CityName</td>
                                            <td>@item.CityAreaName</td>
                                            <td>@item.Designation</td>
                                            <td>
                                                <div class="dt-buttons">
                                                    <a href="#" data-id="@item.ID" class="btn btn-xs edit" title="Edit"><i class="fa fa-pencil-square-o"></i></a>
                                                    |
                                                    <a href="#" data-id="@item.ID" class="btn btn-xs delete" title="Remove"><i class="fa fa-trash"></i></a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    $('.grid').on('click', '.delete', function () {
        if (confirm('Are you sure to want to delete?')) {
            var id = $(this).attr("data-id");
            $('.page-loader-wrapper').show();
            var url = getWebsiteUrl + "/Employee/EmployeeDelete?Id=" + id;
            window.location.href = url;
        }
    });

    $('.grid').on('click', '.edit', function () {
        var id = $(this).attr("data-id");
        $('.page-loader-wrapper').show();
        var url = getWebsiteUrl + "/Employee/AddEditEmployee?Id=" + id;
        window.location.href = url;
    });

</script>
