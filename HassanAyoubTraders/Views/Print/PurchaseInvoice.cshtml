                <small>
                    City Area: @Model.VendorCityArea
                </small>
                <br>
                <small>
                    Address :  @Model.VendorAddress
                </small>
            </td>
            <td style="">
                <table border="1" style="width: 70%;">
                    <tr>
                        <th colspan="2" style="text-align:center; width: 30%;padding: 2px;">PURCHASE INVOICE</th>
                    </tr>
